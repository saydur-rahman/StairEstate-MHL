@using Antlr.Runtime.Tree
@model StairEstate.Entity.sys_user_type

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}

<div class="parentDiv panel mainbody panel-body">
    @using (Html.BeginForm())
    {

        <div class="form-horizontal ">
            <h4>System User Type</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.usr_type_Id)

            <div class="form-group">
                <label class="control-label col-md-2">Type</label>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.type_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.type_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Description</label>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>

    }

    <div>
        @Html.ActionLink("Back to List", "Index", "UserType", null, new{@class = "btn btn-sm btn-small btn-default return"})
    </div>

</div>

