@model StairEstate.Entity.sys_menu

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}

<div class="parentDiv panel mainbody panel-body">
    @using (Html.BeginForm())
    {


    <div class="form-horizontal ">
        <div class="head form-inline panel-heading" style="color: black">
            <h3>Remove menu access</h3>
        </div>
        
        <br/>

        <h3>Are you sure you want to remove access?</h3>
        <h4>User type: @ViewBag.UserType</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.menu_id)

        <div class="form-group">
            <label class="control-label col-md-2">Name</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.menu_name, new { htmlAttributes = new { @class = "form-control", @Disabled = "" } })
                @Html.ValidationMessageFor(model => model.menu_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Link</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.menu_link, new { htmlAttributes = new { @class = "form-control", @Disabled = "" } })
                @Html.ValidationMessageFor(model => model.menu_link, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Remove" class="btn btn-danger" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index", "UserPermission", null, new { @class = "btn btn-sm btn-small btn-default" })
    </div>

</div>